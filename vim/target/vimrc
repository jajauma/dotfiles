if &compatible
  set nocompatible
endif

if &t_Co > 2 || has("gui_running")
  syntax on
endif

if has("gui_running")
  set guifont=Iosevka_SS08_Semibold:h12:W500
  set guioptions-=T
  set guioptions-=r
  set guioptions-=L
  set guioptions-=m
  set guioptions+=!
endif

filetype plugin indent on
set autoindent
set formatoptions=tcqj
set history=10000
set hlsearch
set incsearch
set laststatus=2
set ttyfast
set visualbell t_vb=
if has("autocmd") && has("gui_running")
    au GUIEnter * set t_vb=
endif
